<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products - <%= settings && settings.companyName ? settings.companyName : 'RGC Pool and Spa' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <%- include('../../partials/theme-styles', { settings: typeof settings !== 'undefined' ? settings : null }) %>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
  </style>
</head>
<body>
<%- include('../../partials/public-header', { settings }) %>

<div class="container my-5">
  <h1 class="display-4 mb-5 text-center">Our Products</h1>
  
  <% if (products && products.length > 0) { %>
    <div class="row g-4">
      <% products.forEach(product => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% if (product.featuredImage) { %>
              <img src="/admin/media/image/<%= product.featuredImage._id %>/medium" class="card-img-top" alt="<%= product.name %>" style="height: 250px; object-fit: cover;">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text flex-grow-1"><%= product.description.length > 100 ? product.description.substring(0, 100) + '...' : product.description %></p>
              <a href="/products/<%= product.slug %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">
      <p class="mb-0">No products available at this time. Please check back later.</p>
    </div>
  <% } %>
</div>

<%- include('../../partials/public-footer', { settings }) %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
