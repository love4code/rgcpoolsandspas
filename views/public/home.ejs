<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - <%= settings && settings.companyName ? settings.companyName : 'RGC Pool and Spa' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <%- include('../partials/theme-styles', { settings: typeof settings !== 'undefined' ? settings : null }) %>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .hero-section {
      min-height: 60vh;
      display: flex;
      align-items: center;
    }
    .service-card {
      transition: transform 0.3s;
      height: 100%;
    }
    .service-card:hover {
      transform: translateY(-5px);
    }
    .service-card .service-icon {
      color: var(--theme-primary, #0066cc);
      display: block;
      margin: 0 auto;
    }
    .portfolio-card {
      overflow: hidden;
      transition: transform 0.3s;
    }
    .portfolio-card:hover {
      transform: scale(1.05);
    }
    .contact-form {
      background: #f8f9fa;
      padding: 2rem;
      border-radius: 10px;
    }
  </style>
</head>
<body>
<%- include('../partials/public-header', { settings }) %>

<% if (heroImage) { %>
  <div class="hero-section theme-hero-with-image" style="background-image: url('/admin/media/image/<%= heroImage._id %>/large'); background-size: cover; background-position: center;">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-4 fw-bold mb-4">Welcome to <%= settings.companyName || 'RGC Pool and Spa' %></h1>
          <p class="lead mb-4">Your trusted partner for all your pool and spa needs</p>
          <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="/contact" class="btn btn-light btn-lg">Schedule Consultation</a>
            <a href="/products" class="btn btn-outline-light btn-lg">View Products</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="hero-section theme-hero">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-4 fw-bold mb-4">Welcome to <%= settings.companyName || 'RGC Pool and Spa' %></h1>
          <p class="lead mb-4">Your trusted partner for all your pool and spa needs</p>
          <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="/contact" class="btn btn-light btn-lg">Schedule Consultation</a>
            <a href="/products" class="btn btn-outline-light btn-lg">View Products</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>

<div class="container my-5">
  <% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (typeof error !== 'undefined' && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <% if (services && services.length > 0) { %>
    <section class="my-5">
      <h2 class="text-center mb-5">Our Services</h2>
      <div class="row g-4">
        <% services.forEach(service => { %>
          <div class="col-md-4">
            <div class="card service-card h-100 shadow-sm">
              <div class="card-body text-center">
                <div class="mb-3">
                  <i class="bi <%= service.icon %> display-1 service-icon"></i>
                </div>
                <h5 class="card-title"><%= service.name %></h5>
                <p class="card-text"><%= service.description %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  <% } %>

  <% if (portfolioItems && portfolioItems.length > 0) { %>
    <section class="my-5">
      <h2 class="text-center mb-5">Featured Projects</h2>
      <div class="row g-4">
        <% portfolioItems.forEach(item => { %>
          <div class="col-md-6 col-lg-3">
            <div class="card portfolio-card h-100 shadow-sm">
              <% if (item.featuredImage) { %>
                <img src="/admin/media/image/<%= item.featuredImage._id %>/medium" class="card-img-top" alt="<%= item.title %>" style="height: 200px; object-fit: cover;">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
                <% if (item.slug) { %>
                  <a href="/portfolio/<%= item.slug %>" class="btn btn-primary btn-sm">View Details</a>
                <% } else { %>
                  <span class="text-muted">Details unavailable</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="text-center mt-4">
        <a href="/portfolio" class="btn btn-outline-primary">View All Projects</a>
      </div>
    </section>
  <% } %>

  <section class="my-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="contact-form">
          <h2 class="text-center mb-4">Get In Touch</h2>
          <form action="/inquiry" method="POST">
            <input type="hidden" name="source" value="home">
            <div class="row g-3">
              <div class="col-md-6">
                <label for="name" class="form-label">Name *</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="col-md-6">
                <label for="town" class="form-label">Town</label>
                <input type="text" class="form-control" id="town" name="town">
              </div>
              <div class="col-md-6">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone">
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email Address *</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="col-12">
                <label for="service" class="form-label">Service *</label>
                <select class="form-select" id="service" name="service" required>
                  <option value="">Select a service</option>
                  <option value="New Above Ground Pool">New Above Ground Pool</option>
                  <option value="Liner Replacement">Liner Replacement</option>
                  <option value="Pool Install">Pool Install</option>
                  <option value="Service Call">Service Call</option>
                </select>
              </div>
              <div class="col-12">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="4"></textarea>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary w-100">Submit Inquiry</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/public-footer', { settings }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
