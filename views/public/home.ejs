<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - <%= settings && settings.companyName ? settings.companyName : 'RGC Pool and Spa' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <%- include('../partials/theme-styles', { settings: typeof settings !== 'undefined' ? settings : null }) %>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .hero-section {
      min-height: 60vh;
      display: flex;
      align-items: center;
    }
    .service-card {
      transition: transform 0.3s;
      height: 100%;
    }
    .service-card:hover {
      transform: translateY(-5px);
    }
    .service-card .service-icon {
      color: var(--theme-primary, #0066cc);
      display: block;
      margin: 0 auto;
    }
    .portfolio-card {
      overflow: hidden;
      transition: transform 0.3s;
    }
    .portfolio-card:hover {
      transform: scale(1.05);
    }
    .contact-form {
      background: #f8f9fa;
      padding: 2rem;
      border-radius: 10px;
    }
    .events-list-container {
      height: 500px;
      overflow-y: auto;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 1rem;
      background: #fff;
    }
    .facebook-embed-wrapper {
      height: 500px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .facebook-embed-container {
      width: 100%;
      max-width: 100%;
      overflow: hidden;
    }
    .facebook-embed-container iframe {
      width: 100% !important;
      height: 500px !important;
    }
    .event-item {
      padding: 1rem;
      border-bottom: 1px solid #e9ecef;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    .event-item:hover {
      background-color: #f8f9fa;
    }
    .event-item:last-child {
      border-bottom: none;
    }
    .event-item-title {
      font-weight: 600;
      color: #0d6efd;
      margin-bottom: 0.25rem;
    }
    .event-item-date {
      font-size: 0.9rem;
      color: #6c757d;
    }
    .event-item-location {
      font-size: 0.85rem;
      color: #6c757d;
      margin-top: 0.25rem;
    }
    /* Limit products to 3 items on mobile devices */
    @media (max-width: 767.98px) {
      .products-section .row > div:nth-child(n+4) {
        display: none;
      }
    }
    /* Limit projects display on mobile - 4 projects will show on medium screens (col-md-3) */
    @media (max-width: 767.98px) {
      .portfolio-section .row > div:nth-child(n+4) {
        display: none;
      }
    }
  </style>
</head>
<body>
<%- include('../partials/public-header', { settings }) %>

<% if (heroImage) { %>
  <div class="hero-section theme-hero-with-image" style="background-image: url('/admin/media/image/<%= heroImage._id %>/large'); background-size: cover; background-position: center;">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-4 fw-bold mb-4">Welcome to <%= settings.companyName || 'RGC Pool and Spa' %></h1>
          <p class="lead mb-4">Your trusted partner for all your pool and spa needs</p>
          <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="/contact" class="btn btn-light btn-lg">Schedule Consultation</a>
            <a href="/products" class="btn btn-outline-light btn-lg">View Products</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="hero-section theme-hero">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-4 fw-bold mb-4">Welcome to <%= settings.companyName || 'RGC Pool and Spa' %></h1>
          <p class="lead mb-4">Your trusted partner for all your pool and spa needs</p>
          <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="/contact" class="btn btn-light btn-lg">Schedule Consultation</a>
            <a href="/products" class="btn btn-outline-light btn-lg">View Products</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>

<div class="container my-5">
  <% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (typeof error !== 'undefined' && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <% if (services && services.length > 0) { %>
    <section class="my-5">
      <h2 class="text-center mb-5">Our Services</h2>
      <div class="row g-4">
        <% services.forEach(service => { %>
          <div class="col-md-4">
            <div class="card service-card h-100 shadow-sm">
              <div class="card-body text-center">
                <div class="mb-3">
                  <i class="bi <%= service.icon %> display-1 service-icon"></i>
                </div>
                <h5 class="card-title"><%= service.name %></h5>
                <p class="card-text"><%= service.description %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  <% } %>

  <% if (products && products.length > 0) { %>
    <section class="my-5 products-section">
      <h2 class="text-center mb-5">Featured Products</h2>
      <div class="row g-4">
        <% products.forEach(product => { %>
          <div class="col-12 col-md-3 col-lg-3">
            <div class="card portfolio-card h-100 shadow-sm">
              <% if (product.featuredImage) { %>
                <img src="/admin/media/image/<%= product.featuredImage._id %>/medium" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
              <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text flex-grow-1"><%= product.description.length > 100 ? product.description.substring(0, 100) + '...' : product.description %></p>
                <% if (product.slug) { %>
                  <a href="/products/<%= product.slug %>" class="btn btn-primary btn-sm mt-auto">View Details</a>
                <% } else { %>
                  <span class="text-muted">Details unavailable</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="text-center mt-4">
        <a href="/products" class="btn btn-outline-primary">View All Products</a>
      </div>
    </section>
  <% } %>

  <% if (portfolioItems && portfolioItems.length > 0) { %>
    <section class="my-5 portfolio-section">
      <h2 class="text-center mb-5">Featured Projects</h2>
      <div class="row g-4">
        <% portfolioItems.forEach(item => { %>
          <div class="col-12 col-sm-6 col-md-3 col-lg-3">
            <div class="card portfolio-card h-100 shadow-sm">
              <% if (item.featuredImage) { %>
                <img src="/admin/media/image/<%= item.featuredImage._id %>/medium" class="card-img-top" alt="<%= item.title %>" style="height: 200px; object-fit: cover;">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
                <% if (item.slug) { %>
                  <a href="/portfolio/<%= item.slug %>" class="btn btn-primary btn-sm">View Details</a>
                <% } else { %>
                  <span class="text-muted">Details unavailable</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="text-center mt-4">
        <a href="/portfolio" class="btn btn-outline-primary">View All Projects</a>
      </div>
    </section>
  <% } %>

  <% if ((events && events.length > 0) || (settings && settings.facebookPageUrl)) { %>
    <section class="my-5">
      <div class="container">
        <div class="row g-4">
          <% if (events && events.length > 0) { %>
            <div class="col-12 col-md-6">
              <h2 class="text-center mb-4">Upcoming Events</h2>
              <div class="events-list-container">
                <% events.forEach(event => { %>
                  <div class="event-item" 
                       data-event-id="<%= event._id %>"
                       data-event-title="<%= event.title %>"
                       data-event-start="<%= event.startDate.toISOString() %>"
                       data-event-end="<%= event.endDate ? event.endDate.toISOString() : '' %>"
                       data-event-allday="<%= event.allDay %>"
                       data-event-location="<%= event.location || '' %>"
                       data-event-description="<%= (event.description || '').replace(/"/g, '&quot;') %>">
                    <div class="event-item-title">
                      <i class="bi bi-calendar-event"></i> <%= event.title %>
                    </div>
                    <div class="event-item-date">
                      <i class="bi bi-clock"></i> 
                      <%= new Date(event.startDate).toLocaleDateString('en-US', { 
                        weekday: 'short', 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric',
                        hour: event.allDay ? undefined : 'numeric',
                        minute: event.allDay ? undefined : '2-digit'
                      }) %>
                      <% if (event.allDay) { %>
                        <span class="badge bg-secondary ms-2">All Day</span>
                      <% } %>
                    </div>
                    <% if (event.location) { %>
                      <div class="event-item-location">
                        <i class="bi bi-geo-alt"></i> <%= event.location %>
                      </div>
                    <% } %>
                    <% if (event.description) { %>
                      <div class="event-item-description mt-2" style="font-size: 0.85rem; color: #6c757d;">
                        <%= event.description.length > 100 ? event.description.substring(0, 100) + '...' : event.description %>
                      </div>
                    <% } %>
                  </div>
                <% }); %>
              </div>
            </div>
          <% } %>
          
          <% if (settings && settings.facebookPageUrl) { %>
            <div class="col-12 col-md-6">
              <h2 class="text-center mb-4">Follow Us on Facebook</h2>
              <div class="facebook-embed-wrapper">
                <div class="facebook-embed-container">
                  <iframe 
                    src="https://www.facebook.com/plugins/page.php?href=<%= encodeURIComponent(settings.facebookPageUrl) %>&tabs=timeline&width=500&height=500&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId" 
                    width="500" 
                    height="500" 
                    style="border:none;overflow:hidden;" 
                    scrolling="no" 
                    frameborder="0" 
                    allowfullscreen="true" 
                    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share">
                  </iframe>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </section>
  <% } %>

  <section class="my-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="contact-form">
          <h2 class="text-center mb-4">Get In Touch</h2>
          <form action="/inquiry" method="POST">
            <input type="hidden" name="source" value="home">
            <div class="row g-3">
              <div class="col-md-6">
                <label for="name" class="form-label">Name *</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="col-md-6">
                <label for="town" class="form-label">Town</label>
                <input type="text" class="form-control" id="town" name="town">
              </div>
              <div class="col-md-6">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone">
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email Address *</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="col-12">
                <label for="service" class="form-label">Service *</label>
                <select class="form-select" id="service" name="service" required>
                  <option value="">Select a service</option>
                  <option value="New Above Ground Pool">New Above Ground Pool</option>
                  <option value="Liner Replacement">Liner Replacement</option>
                  <option value="Pool Install">Pool Install</option>
                  <option value="Service Call">Service Call</option>
                </select>
              </div>
              <div class="col-12">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="4"></textarea>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary w-100">Submit Inquiry</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/public-footer', { settings }) %>

  <!-- Event Detail Modal -->
  <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventModalLabel">Event Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="eventModalBody">
          <!-- Event details will be populated here -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <a href="#" id="eventDetailLink" class="btn btn-primary" target="_blank">View Full Details</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Handle event item clicks
    document.addEventListener('DOMContentLoaded', function() {
      const eventItems = document.querySelectorAll('.event-item');
      const eventModal = new bootstrap.Modal(document.getElementById('eventModal'));
      const eventModalBody = document.getElementById('eventModalBody');
      const eventModalLabel = document.getElementById('eventModalLabel');
      const eventDetailLink = document.getElementById('eventDetailLink');

      eventItems.forEach(item => {
        item.addEventListener('click', function() {
          const eventId = this.getAttribute('data-event-id');
          const eventTitle = this.getAttribute('data-event-title');
          const eventStart = this.getAttribute('data-event-start');
          const eventEnd = this.getAttribute('data-event-end');
          const eventAllDay = this.getAttribute('data-event-allday') === 'true';
          const eventLocation = this.getAttribute('data-event-location');
          const eventDescription = this.getAttribute('data-event-description');

          // Format dates
          const startDate = new Date(eventStart);
          const startDateFormatted = startDate.toLocaleString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: eventAllDay ? undefined : 'numeric',
            minute: eventAllDay ? undefined : '2-digit'
          });

          let endDateFormatted = '';
          if (eventEnd) {
            const endDate = new Date(eventEnd);
            endDateFormatted = endDate.toLocaleString('en-US', {
              weekday: 'long',
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              hour: eventAllDay ? undefined : 'numeric',
              minute: eventAllDay ? undefined : '2-digit'
            });
          }

          // Build modal content
          let modalContent = `
            <h4 class="mb-3">${eventTitle}</h4>
            <div class="mb-3">
              <h6><i class="bi bi-calendar3"></i> Date & Time</h6>
              <p class="mb-1"><strong>Start:</strong> ${startDateFormatted}</p>
              ${eventEnd ? `<p class="mb-0"><strong>End:</strong> ${endDateFormatted}</p>` : ''}
              ${eventAllDay && !eventEnd ? '<p class="mb-0 text-muted">All Day Event</p>' : ''}
            </div>
          `;

          if (eventLocation) {
            modalContent += `
              <div class="mb-3">
                <h6><i class="bi bi-geo-alt-fill"></i> Location</h6>
                <p class="mb-0">${eventLocation}</p>
              </div>
            `;
          }

          if (eventDescription) {
            modalContent += `
              <div class="mb-3">
                <h6><i class="bi bi-info-circle"></i> Description</h6>
                <p class="mb-0" style="white-space: pre-wrap;">${eventDescription}</p>
              </div>
            `;
          }

          // Update modal
          eventModalLabel.textContent = eventTitle;
          eventModalBody.innerHTML = modalContent;
          eventDetailLink.href = `/events/${eventId}`;

          // Show modal
          eventModal.show();
        });
      });
    });
  </script>
</body>
</html>
