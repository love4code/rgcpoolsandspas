<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events Calendar - <%= settings && settings.companyName ? settings.companyName : 'RGC Pool and Spa' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
  </style>
</head>
<body>
<%- include('../partials/public-header', { settings }) %>

<div class="container my-5">
  <h1 class="display-4 mb-5 text-center">Events Calendar</h1>
  
  <% if (events && events.length > 0) { %>
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="list-group">
          <% events.forEach(event => { %>
            <div class="list-group-item">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= event.title %></h5>
                <small><%= new Date(event.startDate).toLocaleDateString() %></small>
              </div>
              <% if (event.description) { %>
                <p class="mb-1"><%= event.description %></p>
              <% } %>
              <% if (event.location) { %>
                <small><i class="bi bi-geo-alt"></i> <%= event.location %></small>
              <% } %>
              <% if (!event.allDay && event.endDate) { %>
                <small class="d-block mt-1">
                  <i class="bi bi-clock"></i> 
                  <%= new Date(event.startDate).toLocaleTimeString() %> - 
                  <%= new Date(event.endDate).toLocaleTimeString() %>
                </small>
              <% } %>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">
      <p class="mb-0">No upcoming events scheduled at this time. Please check back later.</p>
    </div>
  <% } %>
</div>

<%- include('../partials/public-footer', { settings }) %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
