<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= item.title %> - <%= settings && settings.companyName ? settings.companyName : 'RGC Pool and Spa' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
  </style>
</head>
<body>
<%- include('../../partials/public-header', { settings }) %>

<div class="container my-5">
  <h1 class="display-4 mb-4"><%= item.title %></h1>
  
  <% if (item.featuredImage) { %>
    <img src="/admin/media/image/<%= item.featuredImage._id %>/large" class="img-fluid rounded mb-4" alt="<%= item.title %>">
  <% } %>

  <div class="mb-4">
    <p><%= item.description %></p>
  </div>

  <% if (item.images && item.images.length > 0) { %>
    <div class="row g-3 mb-5">
      <% item.images.forEach(image => { %>
        <div class="col-md-4">
          <img src="/admin/media/image/<%= image._id %>/medium" class="img-fluid rounded" alt="<%= item.title %>">
        </div>
      <% }); %>
    </div>
  <% } %>

  <div class="text-center">
    <a href="/portfolio" class="btn btn-primary">Back to Portfolio</a>
  </div>
</div>

<%- include('../../partials/public-footer', { settings }) %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
