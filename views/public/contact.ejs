<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact - <%= settings && settings.companyName ? settings.companyName : 'RGC Pool and Spa' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .contact-form {
      background: #f8f9fa;
      padding: 2rem;
      border-radius: 10px;
    }
  </style>
</head>
<body>
<%- include('../partials/public-header', { settings }) %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h1 class="display-4 mb-4 text-center">Contact Us</h1>
      
      <% if (typeof success !== 'undefined' && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success[0] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (typeof error !== 'undefined' && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error[0] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <div class="contact-form">
        <form action="/inquiry" method="POST">
          <input type="hidden" name="source" value="contact">
          <div class="row g-3">
            <div class="col-md-6">
              <label for="name" class="form-label">Name *</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="col-md-6">
              <label for="town" class="form-label">Town</label>
              <input type="text" class="form-control" id="town" name="town">
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone">
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address *</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="col-12">
              <label for="service" class="form-label">Service *</label>
              <select class="form-select" id="service" name="service" required>
                <option value="">Select a service</option>
                <option value="New Above Ground Pool">New Above Ground Pool</option>
                <option value="Liner Replacement">Liner Replacement</option>
                <option value="Pool Install">Pool Install</option>
                <option value="Service Call">Service Call</option>
              </select>
            </div>
            <div class="col-12">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5"></textarea>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary w-100">Submit Inquiry</button>
            </div>
          </div>
        </form>
      </div>

      <% if (settings.companyAddress || settings.companyPhone || settings.companyEmail) { %>
        <div class="row mt-5">
          <div class="col-md-4 text-center mb-4">
            <i class="bi bi-geo-alt-fill display-4 text-primary"></i>
            <% if (settings.companyAddress) { %>
              <p class="mt-2"><%= settings.companyAddress %></p>
            <% } %>
          </div>
          <div class="col-md-4 text-center mb-4">
            <i class="bi bi-telephone-fill display-4 text-primary"></i>
            <% if (settings.companyPhone) { %>
              <p class="mt-2"><a href="tel:<%= settings.companyPhone %>"><%= settings.companyPhone %></a></p>
            <% } %>
          </div>
          <div class="col-md-4 text-center mb-4">
            <i class="bi bi-envelope-fill display-4 text-primary"></i>
            <% if (settings.companyEmail) { %>
              <p class="mt-2"><a href="mailto:<%= settings.companyEmail %>"><%= settings.companyEmail %></a></p>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/public-footer', { settings }) %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
