<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar vh-100 position-fixed">
        <div class="position-sticky pt-3">
          <h5 class="text-light px-3 mb-3">Admin Panel</h5>
          <%- include('../partials/admin-sidebar', { inquiryCount }) %>
        </div>
      </nav>
      
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-left: 16.666667% !important;">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
        </div>

        <div class="row g-4 mb-4">
          <div class="col-md-3">
            <div class="card text-white bg-primary">
              <div class="card-body">
                <h5 class="card-title">Products</h5>
                <h2><%= productCount %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-white bg-success">
              <div class="card-body">
                <h5 class="card-title">Portfolio</h5>
                <h2><%= portfolioCount %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-white bg-info">
              <div class="card-body">
                <h5 class="card-title">Services</h5>
                <h2><%= serviceCount %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-white bg-warning">
              <div class="card-body">
                <h5 class="card-title">Events</h5>
                <h2><%= eventCount %></h2>
              </div>
            </div>
          </div>
        </div>

        <div class="row g-4 mb-4">
          <div class="col-md-6">
            <div class="card text-white bg-danger">
              <div class="card-body">
                <h5 class="card-title">New Inquiries</h5>
                <h2><%= inquiryCount %></h2>
                <a href="/admin/inquiries" class="text-white">View All</a>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card text-white bg-secondary">
              <div class="card-body">
                <h5 class="card-title">Media Files</h5>
                <h2><%= mediaCount %></h2>
                <a href="/admin/media" class="text-white">View Library</a>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h5>Recent Inquiries</h5>
          </div>
          <div class="card-body">
            <% if (recentInquiries && recentInquiries.length > 0) { %>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Service</th>
                      <th>Date</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% recentInquiries.forEach(inquiry => { %>
                      <tr>
                        <td><%= inquiry.name %></td>
                        <td><%= inquiry.email %></td>
                        <td><%= inquiry.service %></td>
                        <td><%= new Date(inquiry.createdAt).toLocaleDateString() %></td>
                        <td>
                          <a href="/admin/inquiries" class="btn btn-sm btn-primary">View</a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted">No recent inquiries</p>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

